<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Preferences Affichage">
    <SwitchPreference
        app:key="@string/sp_mode"
        app:title="@string/titlecolor"
        app:defaultValue="false"
        app:icon="@drawable/logo"
        />
    </PreferenceCategory>

    <PreferenceCategory app:title="Taille de Police">
    <SwitchPreference
        app:key="@string/sp_policy_small"
        app:title="@string/title_policy_small"
        app:defaultValue="false"
        app:icon="@drawable/logo"
        />

    <SwitchPreference
        app:key="@string/sp_policy_normal"
        app:title="@string/title_policy_normal"
        app:defaultValue="true"
        app:icon="@drawable/logo"
        />

    <SwitchPreference
        app:key="@string/sp_policy_big"
        app:title="@string/title_policy_big"
        app:defaultValue="false"
        app:icon="@drawable/logo"
        />
    </PreferenceCategory>
</PreferenceScreen>